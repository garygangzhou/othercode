
@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Check out now</h2>
Please enter your details, and we'll ship your goods right away!
    @Html.ValidationSummary()
    <div class="field-validation-error">@ViewData["PageError"]</div>
    @using(Html.BeginForm())        
    {
        <h3>Ship to:</h3>
        <div>Name: @Html.TextBox("Name")</div>
        <h3>Address</h3>
        <div>Line 1: @Html.TextBox("Line1") </div>
        <div>Line 2: @Html.TextBox("Line2") </div>
        <div>Line 3: @Html.TextBox("Line3") </div>
        <div>City: @Html.TextBox("City")</div>
        <div>State: @Html.TextBox("State")</div>
        <div>Zip: @Html.TextBox("Zip")</div>
        <div>Country: @Html.TextBox("Country")</div>
        <h3>Options</h3>
            @Html.CheckBox("GiftWrap", false ) 
            @Html.Label("Gift wrap these items")
        <br />
        <h3>Credit Card Infomation: </h3>
        <div>Card Name: @Html.TextBox("CardNumber")</div>
        <div>Card Holder Name: @Html.TextBox("CardholderName")</div>
        <div>Expiry date: @Html.TextBox("ExpiryDate")</div>
        <div>Security Code: @Html.TextBox("SecurityCode")</div>

        <p align="center"><input type="submit" value="Complete order" /></p>
  } 
